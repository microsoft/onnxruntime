{
    "build_osx_archs": {
        "xros": [
            "arm64"
        ],
        "xrsimulator": [
            "arm64"
        ]
    },
    "build_params": {
        "base": [
            "--parallel",
            "--build_apple_framework",
            "--use_xcode",
            "--use_coreml",
            "--skip_tests",
            "--no_kleidiai",
            "--cmake_extra_defines=onnxruntime_BUILD_UNIT_TESTS=OFF"
        ],
        "xros": [
            "--visionos",
            "--apple_deploy_target=1.0"
        ],
        "xrsimulator": [
            "--visionos",
            "--apple_deploy_target=1.0"
        ]
    }
}
